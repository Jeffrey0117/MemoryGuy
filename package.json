{
  "name": "memory-guy",
  "version": "0.1.0",
  "description": "System resource monitor with memory leak detection",
  "main": ".vite/build/index.js",
  "scripts": {
    "build:preload": "npx esbuild src/preload/index.ts --bundle --platform=node --outfile=dist/preload.js --external:electron --alias:@shared=src/shared",
    "prestart": "npm run build:preload",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "system-monitor",
    "memory",
    "process-manager"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.0",
    "systeminformation": "^5.27.8",
    "zustand": "^4.4.7"
  }
}
